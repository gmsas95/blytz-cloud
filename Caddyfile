{
    admin localhost:2019
    auto_https off
}

:80 {
    # Frontend
    reverse_proxy frontend:3000
    
    # API routes
    handle /api/* {
        reverse_proxy backend:8080
    }
    
    # Health check
    handle /api/health {
        reverse_proxy backend:8080
    }
    
    # Security headers
    header {
        X-Frame-Options DENY
        X-Content-Type-Options nosniff
        X-XSS-Protection "1; mode=block"
    }
}
