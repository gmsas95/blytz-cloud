[Unit]
Description=Blytz Personal AI Assistant Platform
After=network.target

[Service]
Type=simple
User=blytz
Group=blytz
WorkingDirectory=/opt/blytz
EnvironmentFile=/opt/blytz/.env
ExecStart=/opt/blytz/blytz
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
SyslogIdentifier=blytz

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/blytz/customers /opt/blytz/tmp

[Install]
WantedBy=multi-user.target
